@{
  Layout = "_Layout";
}

@using DataBase.Models;
@model List<DataBase.Models.Client>;

<h1>Your Clients</h1>

@if (@Model.Count == 0)
{
  <h3>No Clients have been added yet!</h3>
}

@foreach (Client client in Model)
{
  <li>@Html.ActionLink($"{client.Description}", "Details", new { id = client.ClientId }) | @client.Stylist.Name</li>
}

<p>@Html.ActionLink("Add a new client", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>